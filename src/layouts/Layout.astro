---
import frontendMentorFavicon from "/public/images/favicon-32x-32.png";
import styling from "../scss/index.css";

export interface Props {
  //question mark = optional
  title?: string;
}

const { title = "Social Media Dashboard" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- displays site properly based on user's device -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href={frontendMentorFavicon}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href={styling} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
